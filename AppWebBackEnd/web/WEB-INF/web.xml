<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <filter>
        <filter-name>AcessoRestrito</filter-name>
        <filter-class>una.pa.acesso.AcessoRestrito</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AcessoRestrito</filter-name>
        <url-pattern>/index.htm</url-pattern>
        <url-pattern>/console/*</url-pattern>
        <url-pattern>/desenvolvedor/*</url-pattern>
        <url-pattern>/editora/*</url-pattern>
        <url-pattern>/genero/*</url-pattern>
        <url-pattern>/titulojogo/*</url-pattern>
        <url-pattern>/usuariosistema/*</url-pattern>
        <url-pattern>/convite/*</url-pattern>
        <url-pattern>/jogo/*</url-pattern>
        <url-pattern>/trocajogos/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
